<config>
<fvm>
  <name>
    kh
  </name>
  <platform>cuda</platform>
  <grid>
    <lowerCorner>0 0 0</lowerCorner>
    <upperCorner>1 1 1</upperCorner>
    <dimension>256 256 256</dimension>
  </grid>
  <boundary>periodic</boundary>
  <flux>hll3</flux>
  <endTime>2</endTime>
  <equation>euler3</equation>
  <equationParameters>
    <gamma>1.4</gamma>
  </equationParameters>
  <reconstruction>weno2</reconstruction>
  <cfl>auto</cfl>
  <integrator>auto</integrator>
  <functionals>


  </functionals>
  <initialData>
    <python>kelvinhelmholtz.py</python>
    <parameters>
      <parameter>
        <name>a</name>
        <length>40</length>
        <values><value>0</value></values>
      </parameter>
    </parameters>
  </initialData>
  <diffusion>
    <name>none</name>
    <reconstruction>none</reconstruction>
  </diffusion>
  <writer>
    <type>netcdf</type>
    <basename>kh</basename>
    <numberOfSaves>10</numberOfSaves>
  </writer>
</fvm>
<uq>
  <samples>1</samples>
  <generator>auto</generator>
  <parameters>
    <parameter>
      <name>a</name>
      <length>60</length>
      <type>uniform</type>
    </parameter>
  </parameters>
  <stats>
  <stat>
    <name>
      meanvar
    </name>
    <numberOfSaves>4</numberOfSaves>
    <writer>
      <type>netcdf</type>
      <basename>kh</basename>
    </writer>
    </stat>

  </stats>
</uq>
</config>
